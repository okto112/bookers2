<div class="container">
  <div class="row">
    <% if @new.errors.any? %>
      <h4>
        <%= @new.errors.count %> error prohibited this obj from being saved:
      </h4>
      <ul>
        <% @new.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    <div class="col-md-3">
      <aside>
         <%= render 'layouts/side', user: @user, new: @new %>
      </aside>
    </div>

    <div class="offset-md-1"></div>
    <div class="col-md-8">
      <h2>Books</h2>

      <table  class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= image_tag book.user.get_profile_image(100,100) %></td>
              <td>
                <%= link_to book_path(book.id) do %>
                  <%= book.title %>
                <% end %>
              </td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>