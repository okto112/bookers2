<div class="container">
  <div class="row">
    <div class="col-md-3">
      <aside>
         <%= render 'layouts/side', user: @user, new: @new %>
      </aside>
    </div>

    <div class="offset-md-1"></div>

    <div class="col-md-8">
      <h2>Book detail</h2>

      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= image_tag @book.user.get_profile_image(100,100) %>
              <p>
                <%= link_to user_path(@book.user.id) do %>
                  <%= @book.user.name %>
                <% end %>
              </p>
            </td>
            <td><%= @book.title %></td>
            <td><%= @book.body %></td>
            <% if @book.user == current_user %>
              <td><%= link_to "編集", edit_book_path(@book.id) %></td>
              <td><%= link_to "削除", book_path(@book), method: :delete %></td>
            <% end %>
          </tr>
        </tbody>
      </table>

    </div>
  </div>
</div>