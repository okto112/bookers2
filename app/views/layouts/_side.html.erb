<div>
  <h2>User info</h2>
  <%= image_tag user.get_profile_image(100,100) %>
  <table class="table mb-4">
    <tbody>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </tbody>
  </table>

  <% if user == current_user %>
      <%= link_to edit_user_path(user), class:"btn btn-outline-secondary w-100 mb-3" do %>
      <i class="fa-solid fa-user-gear"></i>
      <% end %>
  <% end %>
</div>


<h2>New book</h2>
<% if new.errors.any? %>
  <%= new.errors.count %>件のエラーが発生しました
  <ul>
    <% new.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: new do |f| %>
  <p>Title</p>
  <%= f.text_field :title, class:"form-control w-100" %>
  <p>Opinion</p>
  <%= f.text_area :body, class:"form-control w-100  mb-3" %>
  <%= f.submit 'Create Book', class:"btn btn-success" %>
<% end %>