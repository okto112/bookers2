<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/805b015b17.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="header bg-dark mb-3">
      <div class="container">
        <div class="row px-1 py-3">
          <div class="col-3">
            <div class="logo">
              <%= link_to 'Bookers', root_path, class:"text-light" %>
            </div>
          </div>
          <div class="col-5 offset-4">
            <div class="row">
              <% if user_signed_in? %>
                <div class="col-3">
                  <div class="header-content">
                     <%= link_to user_path(current_user.id), class:"text-light" do %>
                      <i class="fa-solid fa-house"></i>
                      Home
                     <% end %>
                  </div>
                </div>
                <div class="col-3">
                  <div class="header-content">
                    <%= link_to users_path, class:"text-light" do %>
                      <i class="fa-solid fa-users"></i>
                      Users
                    <% end %>
                  </div>
                </div>
                <div class="col-3">
                  <div class="header-content">
                    <%= link_to books_path, class:"text-light" do %>
                      <i class="fa-solid fa-book-open"></i>
                      Books
                    <% end %>
                  </div>
                </div>
                <div class="col-3">
                  <div class="header-content">
                    <%= link_to destroy_user_session_path, method: :delete, class:"text-light" do %>
                      <i class="fa-solid fa-right-from-bracket"></i>
                      Log out
                    <% end %>
                  </div>
                </div>
              <% else %>
                <div class="col-3">
                  <div class="header-content">
                    <%= link_to root_path, class:"text-light" do %>
                      <i class="fa-solid fa-house"></i>
                      Home
                    <% end %>
                  </div>
                </div>
                <div class="col-3">
                  <div class="header-content">
                    <%= link_to about_path, class:"text-light" do %>
                      <i class="fa-solid fa-link"></i>
                      About
                    <% end %>
                  </div>
                </div>
                <div class="col-3">
                  <div class="header-content">
                    <%= link_to new_user_registration_path, class:"text-light" do %>
                      <i class="fa-solid fa-user-plus"></i>
                      Sign up
                    <% end %>
                  </div>
                </div>
                <div class="col-3">
                  <div class="header-content">
                    <%= link_to new_user_session_path, class:"text-light" do %>
                      <i class="fa-solid fa-right-to-bracket"></i>
                      Log in
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </header>

    <main>
      <div class="container-fluid">
        <div>
           <%= flash[:notice] %>
        </div>
        <%= yield %>
      </div>
    </main>
    
    <footer>
      <p class="row justify-content-md-center">CopyRight Infratop.inc</p>
    </footer>
  </body>
</html>
