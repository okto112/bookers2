<div class="container">
  <div class="row">
    <div class="col-md-3">
      <aside>
         <%= render 'layouts/side', user: @user, new: @new %>
      </aside>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>

      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>

        <tbody>
          <% @books.each do |books| %>
            <tr>
              <td><%= image_tag books.user.get_profile_image(100,100) %></td>
              <td>
                <%= link_to book_path(books.id) do %>
                  <%= books.title %>
                <% end %>
              </td>
              <td><%= books.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>